<h2>Listing Repositories</h2>

<table class="table">
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for repository <- @repositories do %>
    <tr>
      <td>
        <span><%= repository.details.owner %></span>
      </td>
      <td>
        <span><%= repository.details.name %></span>
      </td>
      <td class="text-right">
        <span><%= link "Show", to: repositories_path(@conn, :show, repository), class: "btn btn-default btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
